<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:id="@+id/txtSelectCategory"
        android:text="select category"
        android:textSize="30sp"
        />
    
    <GridLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:columnCount="5"
    	android:orientation="horizontal"
        >
	   	<Button
	   	    android:id="@+id/btnRequiredMajor" 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="match_parent"
	   	    android:text="전필"
	   	    android:textSize="20sp"
	   	    android:padding="10sp"
	   	    />
	    <Button
	   	    android:id="@+id/btnElectiveMajor" 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="match_parent"
	   	    android:text="전선"
	   	    android:textSize="20sp"
	   	    android:padding="10sp"
	   	    />
	    <Button
	   	    android:id="@+id/btnRequiredLiberal" 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="match_parent"
	   	    android:text="교필"
	   	    android:textSize="20sp"
	   	    android:padding="10sp"
	   	    />
	    <Button
	   	    android:id="@+id/btnElectiveLiberal" 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="match_parent"
	   	    android:text="교선"
	   	    android:textSize="20sp"
	   	    android:padding="10sp"
	   	    />
	    <Button
	   	    android:id="@+id/btnSaveTimetable" 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="match_parent"
	   	    android:text="저장"
	   	    android:textSize="20sp"
	   	    android:padding="10sp"
	   	    />
    </GridLayout>
    
    <LinearLayout
    	android:layout_width="match_parent"
	   	android:layout_height="wrap_content" >
	    
        <TextView 
            android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:id="@+id/txtCurrentCredit"
            />
        
        <TextView 
            android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:id="@+id/txtLeft"
            />
	    
    </LinearLayout>
    
    <ListView
        android:id="@+id/categoryRM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
    />
    <ListView
        android:id="@+id/categoryEM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
    />
    <ListView
        android:id="@+id/categoryRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
    />
    <ListView
        android:id="@+id/categoryEL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
    />
    
</LinearLayout>
